<h2>Available drones</h2>

<ul>
    {{#each drones}}
    <li>Name : {{this.name}} | Propellers : {{this.propellers}} | Max Speed : {{this.maxSpeed}}</li>
    <a href="/drones/{{this._id}}/edit">Edit</a>
    <form method='POST' action="/drones/{{this._id}}/delete">
        <button>Delete</button>
    </form>
    {{/each}}
</ul>
